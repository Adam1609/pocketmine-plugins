#!/bin/sh
#
script=$(cd $(dirname $0) && pwd)/$(basename $0)
if [ -L $script ] ; then
  lnk=$(readlink $script)
  script=$(cd $(dirname $script) && cd $(dirname $lnk)&& pwd )/$(basename $lnk)
fi
phpsrc=$script.php
if [ ! -f $phpsrc ] ; then
  echo "Unable to find PHP code"
  exit 1
fi
exec php -n -d extension=posix.so "$phpsrc" "$@"
